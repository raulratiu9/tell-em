name: Tell 'em Build

on: [push, pull_request]

jobs:
  build-backend:
    name: Build Java (Spring Boot) Server
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Java
        uses: actions/setup-java@v3
        with:
          distribution: "temurin"
          java-version: "23"

      - name: Build Spring Boot
        run: |
          cd server
          ./mvnw clean package -DskipTests  # Sau Gradle dacă folosești

  build-frontend:
    name: Build React Native Frontend Application
    runs-on: ubuntu-latest
    needs: build-backend

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: "18"

      - name: Install dependencies
        run: |
          cd client
          yarn

      - name: Build React Native
        run: |
          cd client
          yarn build
